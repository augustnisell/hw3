<h1>New Post</h1>

<a href="/places/<%= params["place_id"] %>">Back to Place</a>

<%= form_with :model => @post do |form| %>
    <p>
      <%= form.label "title", "Title" %>
      <br>
      <%= form.text_field "title" %>
    </p>
    <p>
        <%= form.label "description", "Description" %>
        <br>
        <%= form.text_area "description" %>
    </p>
    <%= form.hidden_field "posted_on", :value => Time.now %>
    <%= form.hidden_field "place_id", :value => params["place_id"] %>
    <%= form.submit %>
<% end %>